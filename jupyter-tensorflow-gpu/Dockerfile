FROM nvidia/cuda:10.0-cudnn7-devel-ubuntu16.04
MAINTAINER "Eufrat Tsaqib"

RUN apt-get update && apt-get install -y wget ca-certificates \
    git curl vim python3-dev python3-pip \
    libfreetype6-dev libpng12-dev

RUN pip3 install --upgrade pip
RUN pip3 install tf-nightly-gpu
RUN pip3 install numpy pandas sklearn matplotlib seaborn spectral jupyter jupyterlab

RUN ["mkdir", "notebooks"]
COPY jupyter_notebook_config.py /root/.jupyter/
COPY run_jupyter.sh /
COPY run_tensorboard.sh /

# Jupyter and Tensorboard ports
EXPOSE 8888 6006

# Store notebooks in this mounted directory
VOLUME /notebooks

CMD ["/run_jupyter.sh", "/run_tensorboard.sh"]
